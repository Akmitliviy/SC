@model WarehouseManagement.Models.AddViewModel

@{
    ViewData["Title"] = "Створити нову сутність";
}

<h1>Створити нову @Model.EntityType</h1>

<form asp-action="CreateEntity" method="post">
    <input type="hidden" name="type" value="@Model.EntityType" />

    @foreach (var property in Model.Properties)
    {
        <div class="mb-3">
            <label class="form-label">@property.Key</label>
            <input name="@property.Key" class="form-control" value="@property.Value" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Створити</button>
    <a href="/Home" class="btn btn-secondary">Назад до списку</a>
</form>