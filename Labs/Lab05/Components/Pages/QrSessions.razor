@page "/qrsessions"

<PageTitle>qr_sessions</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="qr_sessions" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@qrSessions" TItem="Lab05SC.Models.University.qr_session" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="Lab05SC.Models.University.qr_session" Property="qr_session_id" Title="qrsessionid">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Lab05SC.Models.University.qr_session" Property="qr_code" Title="qrcode">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Lab05SC.Models.University.qr_session" Property="expiration_date" Title="expirationdate">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Lab05SC.Models.University.qr_session" Property="course.name" Title="course">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Lab05SC.Models.University.qr_session" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="qrSession">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, qrSession)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
